{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    
    "parameters": {
                    "apiVersion": { "type": "string", "defaultValue":"2016-02-01",  "metadata": { "description": "Common API"                             } },
            "virtualNetworkName": { "type": "string",                               "metadata": { "description": "Name of Virtual Network"                } },
        "diagStorageAccountName": { "type": "string",                               "metadata": { "description": "Name of Storage Account for diagnostics"} },
        "diskStorageAccountRoot": { "type": "string",                               "metadata": { "description": "Name of Storage Account for vhds"       } },

        "webPublicIPAddressName": { "type": "string",                               "metadata": { "description": "Name of Application Public IP Address"  } },
           "staPrivateIPAddress": { "type": "string",                               "metadata": { "description": "Actual    Biz Layer Public IP Address"  } },
           "stbPrivateIPAddress": { "type": "string",                               "metadata": { "description": "Actual    Biz Layer Public IP Address"  } },
         "jbPublicIPAddressName": { "type": "string",                               "metadata": { "description": "Name of Application Public IP Address"  } },

           "webLoadBalancerName": { "type": "string",                               "metadata": { "description": "Name of the web Load Balancer"          } },
                 "webSubnetName": { "type": "string",                               "metadata": { "description": "Name of the web Subnet"                 } },
        "webAvailabilitySetName": { "type": "string",                               "metadata": { "description": "Name of the web Availability Set"       } },
              "webInstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of Web Tier Instances to create" } },
                     "webVmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's of the web tier"   } },
                    "webNicName": { "type": "string",                               "metadata": { "description": "RootName of the NIC's of the web tier"  } },

           "staLoadBalancerName": { "type": "string",                               "metadata": { "description": "Name of the sta Load Balancer"          } },
                 "staSubnetName": { "type": "string",                               "metadata": { "description": "Name of the sta Subnet"                 } },
        "staAvailabilitySetName": { "type": "string",                               "metadata": { "description": "Name of the sta Availability Set"       } },
              "staInstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of sta Layer Instances to create"} },
                     "staVmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's of the sta tier"   } },
                    "staNicName": { "type": "string",                               "metadata": { "description": "RootName of the NIC's of the sta tier"  } },

           "stbLoadBalancerName": { "type": "string",                               "metadata": { "description": "Name of the stb Load Balancer"          } },
                 "stbSubnetName": { "type": "string",                               "metadata": { "description": "Name of the stb Subnet"                 } },
        "stbAvailabilitySetName": { "type": "string",                               "metadata": { "description": "Name of the stb Availability Set"       } },
              "stbInstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of stb Layer Instbnces to create"} },
                     "stbVmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's of the stb tier"   } },
                    "stbNicName": { "type": "string",                               "metadata": { "description": "RootName of the NIC's of the stb tier"  } },
                        
                 "sqlSubnetName": { "type": "string",                               "metadata": { "description": "Name of the data Subnet"                } },
        "sqlAvailabilitySetName": { "type": "string",                               "metadata": { "description": "Name of the data Availability Set"      } },
              "sqlinstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of SQL Instances to create"      } },
                     "sqlVmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's of the sql tier"   } },
                    "sqlNicName": { "type": "string",                               "metadata": { "description": "RootName of the NIC's of the sql tier"  } },

                "mgmtSubnetName": { "type": "string",                               "metadata": { "description": "Name of the management Subnet"          } },
             "mgmtInstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of Mgmt Instances to create"     } },
                    "mgmtVmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's of the mgmt tier"  } },
                   "mgmtNicName": { "type": "string",                               "metadata": { "description": "RootName of the NIC's of the mgmt tier" } },
              "adminAccessRange": { "type": "string",                               "metadata": { "description": "Network subnet where Admins live"       } }
    },

    "variables": {
        "vnetAddressRange": "10.0.0.0/16",
          "webSubnetRange": "10.0.0.0/24",
          "staSubnetRange": "10.0.2.0/24",
          "stbSubnetRange": "10.0.3.0/24",
         "mgmtSubnetRange": "10.0.4.0/24",
         "dmzxSubnetRange": "10.0.5.0/24",
         "dmzySubnetRange": "10.0.6.0/24",
          "sqlSubnetRange": "10.0.9.0/24"
    },

    "resources": [

        {
            "name": "appPip",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/templates/public-ip.json" },

                "parameters": {
                    "apiVersion":          { "value": "[parameters('apiVersion')]"             },
                    "publicIPAddressName": { "value": "[parameters('webPublicIPAddressName')]" }
                }
            }
        },



        {
            "name": "jbPip",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/templates/public-ip.json" },

                "parameters": {
                    "apiVersion":          { "value": "[parameters('apiVersion')]"            },
                    "publicIPAddressName": { "value": "[parameters('jbPublicIPAddressName')]" }

                }
            }
        },



        {
            "name": "serviceTier-A",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/sharedresources/vdc-biztier-azuredeploy.json" },

                "parameters": {
                             "apiVersion": { "value": "[       parameters('apiVersion')]" },
                       "privateIPAddress": { "value": "[       parameters(   'staPrivateIPAddress')]" },
                     "virtualNetworkName": { "value": "[       parameters(    'virtualNetworkName')]" },
                       "loadBalancerName": { "value": "[       parameters(   'staLoadBalancerName')]" },
                             "subnetName": { "value": "[       parameters(         'staSubnetName')]" },
                            "subnetRange": { "value": "[        variables(        'staSubnetRange')]" },
                    "availabilitySetName": { "value": "[       parameters('staAvailabilitySetName')]" },
                          "instanceCount": { "value": "[       parameters(      'staInstanceCount')]" },
                 "diagStorageAccountName": { "value": "[       parameters('diagStorageAccountName')]" },
                 "diskStorageAccountRoot": { "value": "[concat(parameters('diskStorageAccountRoot'),'sta')]" },
                                 "vmName": { "value": "[       parameters(             'staVmName')]" },
                                "nicName": { "value": "[       parameters(            'staNicName')]" }
                }
            }
        },

        {
            "name": "serviceTier-B",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/sharedresources/vdc-biztier-azuredeploy.json" },

                "parameters": {
                             "apiVersion": { "value": "[       parameters('apiVersion')]" },
                       "privateIPAddress": { "value": "[       parameters(   'stbPrivateIPAddress')]" },
                     "virtualNetworkName": { "value": "[       parameters(    'virtualNetworkName')]" },
                       "loadBalancerName": { "value": "[       parameters(   'stbLoadBalancerName')]" },
                             "subnetName": { "value": "[       parameters(         'stbSubnetName')]" },
                            "subnetRange": { "value": "[        variables(        'stbSubnetRange')]" },
                    "availabilitySetName": { "value": "[       parameters('stbAvailabilitySetName')]" },
                          "instanceCount": { "value": "[       parameters(      'stbInstanceCount')]" },
                 "diagStorageAccountName": { "value": "[       parameters('diagStorageAccountName')]" },
                 "diskStorageAccountRoot": { "value": "[concat(parameters('diskStorageAccountRoot'),'stb')]" },
                                 "vmName": { "value": "[       parameters(             'stbVmName')]" },
                                "nicName": { "value": "[       parameters(            'stbNicName')]" }
                }
            }
        }

            

    ]
}
