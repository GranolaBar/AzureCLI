{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    
    "parameters": {
                    "apiVersion": { "type": "string", "defaultValue":"2016-02-01",  "metadata": { "description": "Common API"                             } },
            "virtualNetworkName": { "type": "string",                               "metadata": { "description": "Name of Virtual Network"                } },
                    "subnetName": { "type": "string",                               "metadata": { "description": "Name of the Subnet"                     } },
                   "subnetRange": { "type": "string",                               "metadata": { "description": "Range of the Subnet"                    } },
           "availabilitySetName": { "type": "string",                               "metadata": { "description": "Name of the Availability Set"           } },
                 "InstanceCount": { "type": "int",    "defaultValue": 1,            "metadata": { "description": "Number of instances to create"          } },
        "diagStorageAccountName": { "type": "string",                               "metadata": { "description": "Name of Storage Account for diagnostics"} },
        "diskStorageAccountRoot": { "type": "string",                               "metadata": { "description": "Name of Storage Account for vhds"       } },
                        "vmName": { "type": "string",                               "metadata": { "description": "RootName of the VM's"                   } }
    },

    "variables": { },

    "resources": [

        {
            "name": "[parameters('availabilitySetName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/templates/availability-set.json" },

                "parameters": {
                    "apiVersion":          { "value": "[parameters('apiVersion')]" },
                    "availabilitySetName": { "value": "[parameters('availabilitySetName')]" }
                }
            }
        },


    
        {
            "name": "[parameters('subnetName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",
     
            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/templates/vnet-add-new-subnet.json" },

                "parameters": {
                    "apiVersion":             { "value": "[parameters('apiVersion')]"          },
                          "existingVNETName": { "value": "[parameters( 'virtualNetworkName')]" },
                             "newSubnetName": { "value": "[parameters(         'subnetName')]" },
                    "newSubnetAddressPrefix": { "value": "[parameters(        'subnetRange')]" }
                }
            }
        },



        {
            "name": "[concat(copyIndex(),parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('apiVersion')]",

            "copy": {
                "name": "vmcopy",
                "count": "[parameters('instanceCount')]"
            },

            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('availabilitySetName')) ]",
                "[concat('Microsoft.Resources/deployments/', parameters(         'subnetName')) ]"
            ],

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "https://azureclisa.blob.core.windows.net/sharedresources/vdc-known-vmloop-nolb-azuredeploy.json" },

                "parameters": {
                    "apiVersion":             { "value": "[parameters('apiVersion')]" },
                        "virtualNetworkName": { "value": "[parameters(    'virtualNetworkName')]" },
                                "subnetName": { "value": "[parameters(            'subnetName')]" },
                       "availabilitySetName": { "value": "[parameters(   'availabilitySetName')]" },
                    "diagStorageAccountName": { "value": "[parameters('diagStorageAccountName')]" },
                                 "thisIndex": { "value": "[                                             copyIndex() ]" },
                                    "vmName": { "value": "[concat(parameters( 'vmName'),                copyIndex())]" },
                    "diskStorageAccountName": { "value": "[concat(parameters('diskStorageAccountRoot'), copyIndex())]" }
                }
            }
        }
    ]
}
