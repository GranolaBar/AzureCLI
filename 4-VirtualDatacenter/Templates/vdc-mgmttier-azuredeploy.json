{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    
    "parameters": {
        "commonSettings":         { "type": "object",                               "metadata": { "description": "Common API values"                      } },
           "publicIPAddressName": { "type": "string",                               "metadata": { "description": "Name of JumpBox Public IP Address"      } },
            "virtualNetworkName": { "type": "string",                               "metadata": { "description": "Name of Virtual Network"                } },
                    "subnetName": { "type": "string",                               "metadata": { "description": "Name of the Subnet"                     } },
                   "subnetRange": { "type": "string",                               "metadata": { "description": "Range of the Subnet"                    } },
              "adminAccessRange": { "type": "string",                               "metadata": { "description": "Network subnet where Admins live"       } },
        "diagStorageAccountName": { "type": "string",                               "metadata": { "description": "Name of Storage Account for diagnostics"} },
        "diskStorageAccountRoot": { "type": "string",                               "metadata": { "description": "Name of Storage Account for vhds"       } },
                        "vmName": { "type": "string",                               "metadata": { "description": "Name of the VM's"                       } }
    },

    "variables": {
                         "nicName": "[concat(parameters('vmName'),               '-nic0')]",
          "diskStorageAccountName": "[concat(parameters('diskStorageAccountRoot'),'m'   )]",
        "networkSecurityGroupName": "[concat(parameters('subnetName'),            '-nsg')]"
    },

    "resources": [

        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-03-30",

            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                            "description": "Allow RDP for admins only",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "[parameters('adminAccessRange')]",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },



        {
            "name": "mgmt-sn",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('commonSettings').resourceApiVersion]",

            "dependsOn": [ "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]" ],

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "[concat(parameters('commonSettings').commonTemplatePath,'vnet-add-new-subnet-with-nsg.json')]" },

                "parameters": {
                            "existingVNETName": { "value": "[parameters(     'virtualNetworkName')]" },
                               "newSubnetName": { "value": "[parameters(             'SubnetName')]" },
                      "newSubnetAddressPrefix": { "value": "[parameters(            'SubnetRange')]" },
                    "networkSecurityGroupName": { "value": "[variables('networkSecurityGroupName')]" }
                }
            }
        },    



        {
            "name": "mgmt-nic",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('commonSettings').resourceApiVersion]",

            "dependsOn": [ "Microsoft.Resources/deployments/mgmt-sn" ],

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "[concat(parameters('commonSettings').commonTemplatePath,'nic-via-pip.json')]" },

                "parameters": {
                    "publicIPAddressName": { "value": "[parameters('publicIPAddressName')]" },
                                "nicName": { "value": "[ variables(            'nicName')]" },
                     "virtualNetworkName": { "value": "[parameters( 'virtualNetworkName')]" },
                             "subnetName": { "value": "[parameters(         'subnetName')]" }
                }
            }
        },



        {
            "name": "mgmt-sa",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('commonSettings').resourceApiVersion]",

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "[concat(parameters('commonSettings').commonTemplatePath,'storage-account.json')]" },

                "parameters": {
                    "storageAccountName": { "value": "[ variables('diskStorageAccountName')]" }
                }
            }
        },



        {
            "name": "vm",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[parameters('commonSettings').resourceApiVersion]",

            "dependsOn": [
                "Microsoft.Resources/deployments/mgmt-sn",
                "Microsoft.Resources/deployments/mgmt-nic",
                "Microsoft.Resources/deployments/mgmt-sa"
            ],

            "properties": {
                "mode": "incremental",
                "templateLink": { "uri": "[concat(parameters('commonSettings').commonTemplatePath,'vm-via-nic.json')]" },

                "parameters": {
                                    "vmName": { "value": "[parameters(                'vmName')]" },
                    "diskStorageAccountName": { "value": "[ variables('diskStorageAccountName')]" },
                    "diagStorageAccountName": { "value": "[parameters('diagStorageAccountName')]" },
                                   "nicName": { "value": "[ variables(               'nicName')]" }
                }
            }
        }
    ]
}
