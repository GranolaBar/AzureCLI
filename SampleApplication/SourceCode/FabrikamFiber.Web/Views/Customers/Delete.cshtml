@model FabrikamFiber.DAL.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h1>Delete</h1>

<h2>Are you sure you want to delete this?</h2>

<fieldset>
    <legend>Customer</legend>

    <div class="display-label">First Name</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">Last Name</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Address).ToString()</div>

    <div class="display-label">Phone</div>
    <div class="display-field">
        @foreach (var phone in Model.Phone)
        {
            @Html.DisplayTextFor(_ => phone.Number).ToString()
            <br />
        }
    </div>

    <div class="display-label">Requested Tickets</div>
    <div class="display-field">
        @foreach (var ticket in Model.RequestedTickets)
        {
            @Html.DisplayTextFor(_ => ticket.Description).ToString()
            <br />
        }
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" class="glossyBox"/> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


